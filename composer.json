{
    "name": "spiral/app",
    "description": "Spiral Skeleton Application",
    "license": "MIT",
    "authors": [
        {
            "name": "Wolfy-J",
            "email": "wolfy.jd@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "doctrine/collections": "^1.6",
        "spiral/cycle-bridge": "^2.0",
        "spiral/framework": "^3.1",
        "spiral/nyholm-bridge": "^1.2",
        "spiral/roadrunner-bridge": "^2.0",
        "spiral/sapi-bridge": "^1.0",
        "spiral/validator": "^1.0",
        "spiral/data-grid-bridge": "^3.0",
        "symfony/var-dumper": "^6.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.2",
        "phpunit/phpunit": "^9.5",
        "spiral-packages/database-seeder": "^2.1",
        "spiral-packages/ignition-bridge": "^1.0",
        "spiral/testing": "^2.0"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"copy('.env.sample', '.env');\"",
            "php app.php encrypt:key -m .env",
            "php app.php configure -vv",
            "rr get-binary"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src",
            "Database\\": "app/database"
        },
        "files": [
            "app/src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "publish-cmd": "php app.php publish"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
